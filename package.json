{
  "name": "ai-assistant",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "pnpm --filter \"./packages/*\" run dev",
    "build": "pnpm --filter \"./packages/*\" run build",
    "test": "pnpm --filter \"./packages/*\" run test",
    "debug": "npm run debug:be & npm run dev:fe",
    "dev:fe": "pnpm --filter=ai-assistant-frontend run dev",
    "dev:be": "pnpm --filter=ai-assistant-backend run dev",
    "debug:be": "pnpm --filter=ai-assistant-backend run debug",
    "start": "pnpm --filter=ai-assistant-backend run start",
    "prepare": "husky install",
    "preinstall": "npx only-allow pnpm",
    "pre-commit": "lint-staged",
    "prettier:check": "prettier '**/*.{ts,tsx,mts,mjs,less,js}' --check",
    "prettier:write": "prettier '**/*.{ts,tsx,mts,mjs,less,js}' --write",
    "rm:lib": "rm -rf ./node_modules && rm -rf ./packages/frontend/node_modules && rm -rf ./packages/backend/node_modules",
    "pkg": "ts-node scripts/pkg.ts",
    "dealSRT": "node scripts/deal-srt.cjs /Users/zyb/my/ai-assistant/scripts/test.srt /Users/zyb/my/ai-assistant/scripts/test-out.srt",
    "dealSRT2": "node scripts/deal-srt.cjs /Users/zyb/vedios/talk-llm.srt /Users/zyb/vedios/talk-llm-modify.srt",
    "dealMerge": "node scripts/deal-srt-merge.cjs /Users/zyb/my/ai-assistant/scripts/test.srt /Users/zyb/my/ai-assistant/scripts/test-en.srt /Users/zyb/my/ai-assistant/scripts/test-merge-out.srt",
    "dealMerge2": "node scripts/deal-srt-merge.cjs /Users/zyb/vedios/talk-llm-modify.srt /Users/zyb/vedios/talk-llm-en.srt /Users/zyb/vedios/talk-llm-merge.srt"
  },
  "dependencies": {
    "chalk": "^5.2.0",
    "dayjs": "^1.11.7",
    "husky": "8.0.3",
    "lodash-es": "^4.17.21"
  },
  "lint-staged": {
    "*.{ts,tsx,mts,mjs,less,js}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@types/lodash-es": "^4.17.7",
    "@types/node": "^18.14.0",
    "lint-staged": "^13.2.1",
    "prettier": "^2.8.7",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.0"
  },
  "keywords": [
    "openai",
    "chatgpt",
    "chat",
    "gpt",
    "gpt-3",
    "gpt3",
    "gpt4",
    "ai",
    "ai-assistant",
    "monorepo",
    "pnpm",
    "lerna"
  ]
}
