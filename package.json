{
  "name": "chartgpt",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "lerna run dev",
    "build": "lerna run build",
    "test": "lerna run test",
    "debug": "npm run debug:be & npm run dev:fe",
